<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- 메인 할 일 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 완료 체크박스 -->
            <CheckBox
                android:id="@+id/checkbox_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <!-- 할 일 내용 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- 제목 및 협업 아이콘 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/text_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        tools:text="할 일 제목" />

                    <!-- 협업 아이콘 -->
                    <ImageView
                        android:id="@+id/icon_collaboration"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_collaboration"
                        android:visibility="gone"
                        android:contentDescription="협업 할 일" />

                    <!-- 우선순위 표시기 -->
                    <View
                        android:id="@+id/priority_indicator"
                        android:layout_width="4dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- 내용 -->
                <TextView
                    android:id="@+id/text_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:visibility="gone"
                    tools:text="할 일 상세 내용" />

                <!-- 기한 및 카테고리 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_due_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_chip"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:text="12/25" />

                    <TextView
                        android:id="@+id/text_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_category_chip"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:text="업무" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- 🆕 협업 정보 영역 -->
        <LinearLayout
            android:id="@+id/layout_collaboration_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="@drawable/bg_collaboration_info">

            <!-- 프로젝트 이름 -->
            <TextView
                android:id="@+id/text_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_project_tag"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textSize="11sp"
                android:textColor="@color/collaboration_text"
                android:visibility="gone"
                tools:text="프로젝트 A" />

            <!-- 우선순위 텍스트 -->
            <TextView
                android:id="@+id/text_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_priority_chip"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textSize="11sp"
                android:visibility="gone"
                tools:text="높음" />

            <!-- 담당자 -->
            <TextView
                android:id="@+id/text_assigned_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:gravity="end"
                android:visibility="gone"
                tools:text="담당: 홍길동" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>