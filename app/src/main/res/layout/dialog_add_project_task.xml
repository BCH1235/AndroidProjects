<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="새 할 일 추가"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- 할 일 제목 -->
    <EditText
        android:id="@+id/edit_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="할 일 제목을 입력하세요"
        android:inputType="text"
        android:maxLines="1"
        android:layout_marginBottom="12dp" />

    <!-- 할 일 내용 -->
    <EditText
        android:id="@+id/edit_task_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="할 일 상세 내용 (선택사항)"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:layout_marginBottom="16dp" />

    <!-- 기한 설정 -->
    <CheckBox
        android:id="@+id/checkbox_set_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기한 설정"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/text_selected_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="기한: 2025년 6월 15일 (일)"
        android:textSize="14sp"
        android:textColor="?attr/colorPrimary"
        android:textStyle="bold"
        android:background="@drawable/date_display_background"
        android:padding="12dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_select_date"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜 변경"
        android:drawableStart="@drawable/ic_calendar"
        android:drawablePadding="8dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- 우선순위 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우선순위:"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp" />

    <!-- 버튼들 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/button_cancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소" />

        <Button
            android:id="@+id/button_add"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="추가" />

    </LinearLayout>

</LinearLayout>